<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ParkingTicketActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Parking Ticket"
                android:textColor="@color/textColor"
                android:textSize="21dp" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        android:layout_marginTop="56dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/qrcode" />

            <TextView
                android:id="@+id/ref_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/qrcode"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:text="Reference Number: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ref_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/qrcode"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/ref_number1"
                android:text=" 11233"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/license_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ref_number1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:text="License Plate Number: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/license_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ref_number"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:layout_toRightOf="@id/license_number1"
                android:text=" 11233"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/license_number1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:text="Date: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/license_number1"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/date1"
                android:text=" 11233"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:text="Time: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date1"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/time1"
                android:text=" 11233"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:text="Shopping Mall: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:layout_toRightOf="@id/mall1"
                android:text=" 11233"
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/floor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mall1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:text="Floor: "
                android:textColor="@color/textColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mall1"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/floor1"
                android:text=" 11233"
                android:textColor="@color/textColor"
                android:textSize="20dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>